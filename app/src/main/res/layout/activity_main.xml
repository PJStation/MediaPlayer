<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="cn.cnr.mediaplayerdemo.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:id="@+id/b_setsource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="audio_setsource"
        android:text="setsource"
        />

    <Button
        android:id="@+id/b_prepared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="audio_prepared"
        android:text="prepare"
        />

    <Button
        android:id="@+id/b_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="audio_start"
        android:text="start"
        />

</LinearLayout>